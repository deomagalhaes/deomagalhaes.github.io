        // Template for a single position card in the grid
        function createPositionCardHTML(position) {
            return `
                <div onclick="selectPosition(${position.id})" class="bg-white/10 backdrop-blur-md rounded-2xl p-6 cursor-pointer hover:bg-white/20 transition-all transform hover:-translate-y-2 border border-white/20">
                    <div class="text-center">
                        <div class="text-4xl mb-3">${position.illustration}</div>
                        <div class="flex justify-center mb-3 text-rose-300">
                            <i data-lucide="${position.icon}" class="w-8 h-8"></i>
                        </div>
                        <h3 class="text-xl font-semibold text-white mb-2">${position.name}</h3>
                        <p class="text-rose-200 text-sm mb-4">${position.sanskrit}</p>
                        <div class="flex justify-center gap-2 mb-4">
                            <span class="bg-white/20 px-3 py-1 rounded-full text-white text-xs">${position.difficulty}</span>
                            <span class="bg-white/20 px-3 py-1 rounded-full text-white text-xs">${position.duration}</span>
                        </div>
                        <p class="text-rose-100 text-sm">${position.description.substring(0, 80)}...</p>
                    </div>
                </div>
            `;
        }
        
        // Template for the detailed position view
        function createDetailViewHTML(position) {
            return `
                <div class="min-h-screen p-6 fade-in">
                    <div class="max-w-4xl mx-auto">
                        <button onclick="goBackToMenu()" class="flex items-center gap-2 text-white mb-6 hover:text-rose-200 transition-colors">
                            <i data-lucide="arrow-left" class="w-5 h-5"></i>
                            Voltar ao menu
                        </button>
                        <div class="bg-white/10 backdrop-blur-md rounded-3xl p-8 shadow-2xl border border-white/20">
                            <div class="text-center mb-8">
                                <div class="text-6xl mb-4">${position.illustration}</div>
                                <h1 class="text-4xl font-bold text-white mb-2">${position.name}</h1>
                                <p class="text-2xl text-rose-200 mb-4">${position.sanskrit}</p>
                                <div class="flex justify-center gap-4 mb-6">
                                    <span class="bg-white/20 px-4 py-2 rounded-full text-white text-sm">${position.difficulty}</span>
                                    <span class="bg-white/20 px-4 py-2 rounded-full text-white text-sm">${position.duration}</span>
                                </div>
                            </div>
                            <div class="grid md:grid-cols-2 gap-8">
                                <div class="space-y-6">
                                    <div>
                                        <h3 class="text-xl font-semibold text-white mb-3">Descri√ß√£o</h3>
                                        <p class="text-rose-100">${position.description}</p>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-semibold text-white mb-3">T√©cnica</h3>
                                        <p class="text-rose-100">${position.technique}</p>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-semibold text-white mb-3">Chakras Ativados</h3>
                                        <div class="flex flex-wrap gap-2">
                                            ${position.chakras.map(chakra => `<span class="bg-gradient-to-r from-purple-500 to-pink-500 px-3 py-1 rounded-full text-white text-sm">${chakra}</span>`).join('')}
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-xl font-semibold text-white mb-3">Benef√≠cios</h3>
                                    <ul class="space-y-2">
                                        ${position.benefits.map(benefit => `
                                            <li class="flex items-start gap-2 text-rose-100">
                                                <i data-lucide="heart" class="w-4 h-4 mt-1 text-rose-300 flex-shrink-0"></i>
                                                ${benefit}
                                            </li>
                                        `).join('')}
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        // --- LOGIC & RENDERING ---

        // Main render function to update the UI
        function render() {
            if (selectedPositionId === null) {
                const currentPosition = positions[currentIndex];
                appContainer.innerHTML = createMainViewHTML(currentPosition);
            } else {
                const position = positions.find(p => p.id === selectedPositionId);
                appContainer.innerHTML = createDetailViewHTML(position);
            }
            // After updating the DOM, tell Lucide to create the icons
            lucide.createIcons();
        }

        // --- EVENT HANDLERS ---
        
        window.nextPosition = () => {
            currentIndex = (currentIndex + 1) % positions.length;
            render();
        };

        window.prevPosition = () => {
            currentIndex = (currentIndex - 1 + positions.length) % positions.length;
            render();
        };

        window.selectPosition = (id) => {
            selectedPositionId = id;
            render();
        };

        window.goBackToMenu = () => {
            selectedPositionId = null;
            render();
        };

        // --- INITIALIZATION ---
        // Initial render when the page loads
        document.addEventListener('DOMContentLoaded', render);

    </script>
</body>
